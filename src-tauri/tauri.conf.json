{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ecoflow-desktop-client",
  "identifier": "com.tum4ik.ecoflow-desktop-client",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/ecoflow-desktop-client/browser"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "EcoFlow Desktop Client",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
